<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>HodlInfo</title>
    <link rel="stylesheet" href="/styles.css">
</head>
<style>
    /* Reset default margin and padding */
body, h1, table {
    margin: 0;
    padding: 0;
}

/* Basic styling for the entire page */
body {
    font-family: Arial, sans-serif;
    background-color: #f0f0f0;
    line-height: 1.6;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    height: 100vh;
}

/* Container styling */
main {
    background-color: #fff;
    box-shadow: 0 0 10px rgba(0,0,0,0.1);
    border-radius: 8px;
    overflow: hidden;
    width: 80%;
    max-width: 900px;
}

/* Header styling */
header {
    background-color: #1e90ff;
    width: 100%;
    color: #fff;
    padding: 20px;
    text-align: center;
    border-bottom: 2px solid #0077cc;
}

/* Table styling */
table {
    width: 100%;
    border-collapse: collapse;
    margin-top: 20px;
}

thead {
    background-color: #0077cc;
    color: #fff;
}

th, td {
    padding: 12px 15px;
    text-align: left;
}

tbody tr:nth-child(even) {
    background-color: #f2f2f2;
}

/* Responsive design */
@media (max-width: 768px) {
    main {
        width: 90%;
    }
}

@media (max-width: 480px) {
    th, td {
        padding: 10px;
    }
}

</style>
<body>
    <header>
        <h1>HodlInfo</h1>
    </header>
    <main>
        <table id="crypto-table">
            <thead class="td">
                <tr>
                    <th>Name</th>
                    <th>Last</th>
                    <th>Buy</th>
                    <th>Sell</th>
                    <th>Volume</th>
                </tr>
            </thead>
            <tbody>
                <% data.forEach(item => { %>
                    <tr>
                        <td><%= item.base_unit %></td>
                        <td><%= item.last %></td>
                        <td><%= item.buy %></td>
                        <td><%= item.sell %></td>
                        <td><%= item.volume %></td>
                    </tr>
                <% }) %>
            </tbody>
        </table>
    </main>
</body>
</html>
